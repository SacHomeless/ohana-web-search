%meta{ charset: 'UTF-8' }
%meta{ content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
%title= yield(:title)
%meta{ content: t('meta.description', location: t('branding.location')), name: 'description' }
%meta{ content: 'width=device-width, initial-scale=1.0, user-scalable=0', name: 'viewport' }
%meta{ name: 'google', value: 'notranslate' }
%meta{ content: 'en_US', 'http-equiv' => 'Content-Language' }


-#
  Touch icons for mobile devices.

= favicon_link_tag 'touch_icons/apple-touch-icon-114x114-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '114.114'
= favicon_link_tag 'touch_icons/apple-touch-icon-16x16-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '16x16'
= favicon_link_tag 'touch_icons/apple-touch-icon-24x24-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '24x24'
= favicon_link_tag 'touch_icons/apple-touch-icon-32x32-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '32x32'
= favicon_link_tag 'touch_icons/apple-touch-icon-57x57-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '57x57'
= favicon_link_tag 'touch_icons/apple-touch-icon-72x72-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '72x72'
= favicon_link_tag 'touch_icons/apple-touch-icon-96x96-precomposed.png',   rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '96x96'

= csrf_meta_tags

= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Libre+Baskerville:400,700'
= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Quattrocento+Sans:400,400italic,700'
= stylesheet_link_tag 'application', media: 'all'

-# Include scripts from outside of RequireJS modular system (e.g. Modernizr).
= javascript_include_tag 'vendor'

-# Include Internet Explorer polyfills for legacy system compatibility.
/[if lte IE 8]
  = javascript_include_tag 'ie8'
/[if IE 9]
  = javascript_include_tag 'ie9'

/[if lte IE 9]
  :javascript
    // Hack to handle suppression of JS errors in IE.
    // Normally JS errors would stop the page from loading,
    // but this allows the page to continue loading.
    window.onerror = function (){ return true; };

- if Rails.env.production? && ENV['GOOGLE_ANALYTICS_ID'].present?
  = render 'shared/google_analytics/page_tracking'
= yield :canonical
